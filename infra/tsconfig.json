{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "rootDir": "./infra",
    "outDir": "./infra/cdk-out",

    "types": ["node"]
  },
  "include": ["infra/**/*.ts"],
  "exclude": ["node_modules", "**/*.js"]
}
