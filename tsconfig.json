{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "@infra/*": ["infra/*"],
      "@lambdas/*": ["lambdas/*"],
      "@services/*": ["services/*"]
    },

    "rootDir": ".",
    "outDir": "dist",

    "types": ["node"]
  },

  "include": ["infra/**/*.ts", "lambdas/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
